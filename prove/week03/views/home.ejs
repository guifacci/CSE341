<!doctype html>

<html lang="en">
    <head>
    <meta charset="utf-8">

    <title>"Books' Review"</title>
    <meta name="description" content="The HTML5 Herald">
    <meta name="author" content="SitePoint">

    </head>

    <body>
        <a href="/">Home</a><br>
        <br><a href="/books">Add Book Summary</a>
        <h1>Registered Books </h1><br>

        <% if (books.length > 0) { %>
            <% for(let book of books) { %>
                <p><%= book.bookId %> - <%= book.bookTitle %> - <%= book.bookSummary %> - $ <%= book.bookPrice %></p><br>
                <a href="/books/<%= book._id%>" class="btn">Details</a> - <a href="/cart" class="btn">Add to Cart</a>
            <% } %>
       <% }else { %>
                <h1>No Products Found!</h1>
            <% } %>
            
    </body>
</html>